{
  "name": "iabtm-fullstack",
  "version": "1.0.0",
  "description": "IABTM Full Stack Application",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm start",
    "dev:client": "cd client && npm run dev",
    "setup": "npm run setup:server && npm run setup:client",
    "setup:server": "cd server && node create-env.js",
    "setup:client": "cd client && node create-env.js",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.1",
    "mongoose": "^8.16.5"
  }
}
